{
  "name": "gitstash-manager",
  "version": "2.0.0",
  "description": "An Electron desktop app for viewing and managing git stashes across multiple repositories",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "build": "vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux",
    "build:linux-light": "vite build && electron-builder --linux --config.linux.target=AppImage --config.linux.target=deb",
    "build:all": "vite build && electron-builder --mac --win --linux",
    "dist": "vite build && electron-builder --publish=never",
    "clean": "rm -rf downloads/*",
    "release:patch": "yarn clean && yarn version --patch && yarn build:all",
    "release:minor": "yarn clean && yarn version --minor && yarn build:all",
    "release:major": "yarn clean && yarn version --major && yarn build:all"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "electron-store": "^10.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "productName": "GitStash Manager",
    "directories": {
      "output": "downloads"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "main.js",
      "preload.js",
      "dist-react/**/*",
      "package.json",
      "!**/*.map"
    ],
    "extraResources": [],
    "extraFiles": [],
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${name}-${version}.${ext}",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GitStash Manager"
    }
  },
  "keywords": [
    "git",
    "stash",
    "manager",
    "developer-tools",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT"
}
