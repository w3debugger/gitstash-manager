{
  "name": "gitstash-manager",
  "version": "1.0.0",
  "description": "An Electron desktop app for viewing and managing git stashes across multiple repositories",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "build": "vite build && electron-builder",
    "dist": "vite build && electron-builder --publish=never"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "electron-store": "^8.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gitstash.manager",
    "productName": "GitStash Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist-react/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "git",
    "stash",
    "manager",
    "developer-tools",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT"
}
